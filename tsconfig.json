{
  "compilerOptions": {
    "baseUrl": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "rtl.config.ts",
    "**/__tests__/**/*.test.ts",
    "**/__tests__/**/*.test.tsx"
  ]
}
